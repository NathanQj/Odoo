<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="inherit_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">inherit.res.config.settings.view.form.point_of_sale</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="95"/>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//h2[1]" position="before">
               <h2>Products</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box" title="Product limit.">
                        <div class="o_setting_right_pane">
                            <div>
                                <label string="Default Product Limit" for="product_limit"/>
                                <div class="text-muted">
                                    Default Product Limit
                                </div>
                                <div class="content-group mt16">
                                    <field name="product_limit" colspan="4" nolabel="1" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
